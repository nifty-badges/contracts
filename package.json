    "@openzeppelin/contracts": "^4.3.3",
    "@typechain/ethers-v5": "^8.0.4",
    "@typechain/hardhat": "^3.0.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "ethers": "^5.5.1",
    "hardhat": "^2.6.8",
    "pino": "^7.4.0",
    "pino-pretty": "^7.2.0",
    "reflect-metadata": "^0.1.13",
