{
  "name": "@nifty-badges/contracts",
  "version": "0.0.4",
  "private": false,
  "license": "MIT",
  "main": "index.ts",
  "repository": "https://github.com/nifty-badges/contracts",
  "scripts": {
    "start": "hardhat node",
    "compile": "hardhat clean && hardhat compile",
